---
import "@fontsource-variable/jetbrains-mono";
import SideBar from "../components/SideBar.astro";
import Hamburger from "../assets/hamburger.svg";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
			integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
			crossorigin="anonymous"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>Chayce Ross Blog</title>
	</head>
	<body
		class="flex flex-col lg:flex-row"
		x-data="{ open : false }"
	>
		<SideBar />
		<header
			class="sticky top-0 lg:hidden w-full min-h-12 flex flex-row z-5 justify-start items-center px-4"
		>
			<button
				x-on:click="open = !open"
				class="text-left font-bold text-lg hover:cursor-pointer w-10"
			>
				<img
					class="transition-transform"
					src={Hamburger.src}
					width="20"
					:class="open ? 'rotate-90' : ''"
				/>
			</button>
			<h1 class="text-center grow pr-[20px]">Chayce Ross</h1>
		</header>
		<main
			class="px-4 my-0 py-0 lg:px-0 w-full h-full overflow-y-scroll flex flex-col items-center"
		>
			<slot />
		</main>
	</body>
</html>

<style>
	html {
		scroll-padding-top: 500px;
	}
	html,
	body {
		font-family: "JetBrains Mono Variable", monospace;
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth !important;
		overflow: hidden;
	}
	main {
		scroll-behavior: smooth;
	}
</style>
